    <EditText
        android:id="@+id/etName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/etMobno"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
